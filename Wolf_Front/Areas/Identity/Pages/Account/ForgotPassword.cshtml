@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "忘記密碼?";
}
@section topCSS{
    <link href="~/css/forget.css" rel="stylesheet" />
}
<button id="music_btn" class="btn active" onclick="play()" value=1>
    ▶
</button>
<audio autoplay="autoplay" loop="loop" id="Bgm_music">
    <source src="~/music/homePage.mp3" type="audio/mp3" />
</audio>
<h1>@ViewData["Title"]</h1>
<h4>輸入e-mail</h4>
@*<hr />*@
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">提交</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

}
@section endJS{
    <script src="~/js/forgetPassword_BGM.js"></script>
}
