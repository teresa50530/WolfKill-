@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Reset password";
}
@section topCSS{
    <link href="~/css/background_img.css" rel="stylesheet" />
}

<h1>@*@ViewData["Title"]*@</h1>
<div class="wrap col-md-12 col-12">
    <div class="container d-flex justify-content-center">
        <div class="title text-center">
            <img src="https://i.imgur.com/g4rDyId.png" alt="BS 狼人殺" />
            <br />
        </div>
    </div>
</div>
<h4 class="mx-auto text-center mt-5">重設密碼</h4>
@*<hr />*@
<div class="row mx-auto justify-content-center">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Input.Code" type="hidden" />
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password">密碼</label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword">確認密碼</label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">重設</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
@section endJs{
    <script src="~/js/background_img.js"></script>
}